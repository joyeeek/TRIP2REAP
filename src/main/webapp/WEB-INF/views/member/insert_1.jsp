    <script>
    $(function(){
 	   $('#applyRadio1').on('click',function(){ 
 		   var check = $("#applyRadio1").is(":checked");
 		   if(check){
 			  $('#applyRadio2').prop("checked",true);
 			  $('#applyRadio3').prop("checked",true);
 		   } else {
 			  $('#applyRadio2').prop("checked",false);
 			  $('#applyRadio3').prop("checked",false); 
 		   }
 	   });
 	   
 	  $('#applyRadio2').on('click',function(){ 
		   var check = $("#applyRadio2").is(":checked");
		   if(check == false){
			  $('#applyRadio1').prop("checked",false); 
		   } else {
			   if($("#applyRadio3").is(":checked")){
				   $('#applyRadio1').prop("checked",true);
			   }
		   }
	   });
 	  
 	 $('#applyRadio3').on('click',function(){ 
		   var check = $("#applyRadio3").is(":checked");
		   if(check == false){
			  $('#applyRadio1').prop("checked",false); 
		   } else {
			   if($("#applyRadio2").is(":checked")){
				   $('#applyRadio1').prop("checked",true);
			   }
		   }
	   });     
    });
    
    function cancel(){
    	location.href="<%= request.getContextPath() %>/home.do";
    }
    
    function ok(){
    	if($("#applyRadio1").is(":checked")){
    		location.href="<%= request.getContextPath() %>/insert2.me";
    	} else {
    		swal("이용약관에 동의해주세요.");
    		$(window).scrollTop($("#applyRadio1").offset().top);
    	}   	
    }
    </script>

